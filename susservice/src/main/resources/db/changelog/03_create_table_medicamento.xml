<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">


	<changeSet id="03" author="olciandro.magalhaes">
	
		<createTable tableName="medicamento">
		
            <column name="seq_medicamento" type="bigint" autoIncrement="${autoIncrement}"
            remarks="Número sequencial que identifica unicamente um medicamento. Chave primária da tabela.">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_medicamento"/>
            </column>
            
            <column name="nome" type="varchar(100)">
                <constraints nullable="false" />
            </column>
            
            <column name="quantidade" type="bigint">
                <constraints nullable="false" />
            </column>

            <column name="descricao" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="data_medicacao" type="date">
                <constraints nullable="true" />
            </column>
            
        </createTable>
	</changeSet>

</databaseChangeLog>